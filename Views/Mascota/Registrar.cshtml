@model Linares_Tarea3_Programacion.Models.Mascota
@{
    ViewData["Title"] = "Registrar Mascota";
}

<h2 class="text-primary">Registro de Mascota</h2>
<hr />

<form asp-action="Registrar" method="post" class="p-4 shadow rounded bg-light">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Especie" class="form-label"></label>
        <input asp-for="Especie" class="form-control" />
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" type="number" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
